<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="pl.swps.controller.AddNewParticipant">
    <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <GridPane alignment="TOP_CENTER" prefHeight="350.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="229.0" minWidth="10.0" prefWidth="172.0"/>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="439.0" minWidth="10.0"
                                   prefWidth="408.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints prefHeight="250.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <ListView fx:id="listView" prefHeight="300.0" style="-fx-background-color: #bdc5ff;"
                      GridPane.columnIndex="1" GridPane.rowIndex="4">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
                <cursor>
                    <Cursor fx:constant="DEFAULT"/>
                </cursor>
            </ListView>
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Sex:" GridPane.halignment="RIGHT"
                   GridPane.rowIndex="1">
                <font>
                    <Font name="Avenir Book Oblique" size="15.0"/>
                </font>
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Label>
            <Label text="Years of education:" wrapText="true" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                <font>
                    <Font name="Avenir Book Oblique" size="15.0"/>
                </font>
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Label>
            <Label text="Group number:" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                <font>
                    <Font name="Avenir Book Oblique" size="15.0"/>
                </font>
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Label>
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Participant number#:"
                   GridPane.halignment="RIGHT">
                <font>
                    <Font name="Avenir Book Oblique" size="15.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="CLOSED_HAND"/>
                </cursor>
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Label>
            <TextField fx:id="etParticipantNumber" promptText="participant number #" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
                <cursor>
                    <Cursor fx:constant="TEXT"/>
                </cursor>
            </TextField>
            <TextField fx:id="etYearsEduc" layoutX="10.0" layoutY="21.0" promptText="years #" GridPane.columnIndex="1"
                       GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
                <cursor>
                    <Cursor fx:constant="TEXT"/>
                </cursor>
            </TextField>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
                <RadioButton fx:id="rbMale" mnemonicParsing="false" selected="true" text="Male">
                    <toggleGroup>
                        <ToggleGroup fx:id="toggleGroupSex"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="rbFemale" mnemonicParsing="false" text="Female" toggleGroup="$toggleGroupSex">
                    <HBox.margin>
                        <Insets left="20.0"/>
                    </HBox.margin>
                </RadioButton>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="152.0" layoutY="59.0" prefHeight="100.0" prefWidth="200.0"
                  GridPane.columnIndex="1" GridPane.rowIndex="3">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
                <RadioButton fx:id="rbPositive" mnemonicParsing="false" selected="true" text="Positive">
                    <toggleGroup>
                        <ToggleGroup fx:id="toggleGroupNumber"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="rbNegative" mnemonicParsing="false" text="Negative"
                             toggleGroup="$toggleGroupNumber">
                    <HBox.margin>
                        <Insets left="20.0"/>
                    </HBox.margin>
                </RadioButton>
            </HBox>
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="47.0" prefWidth="162.0"
                   text="(drag and drop to order the list)" textAlignment="CENTER" wrapText="true"
                   GridPane.halignment="RIGHT" GridPane.rowIndex="4">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Label>
        </GridPane>
        <Separator prefWidth="200.0">
            <VBox.margin>
                <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
        </Separator>
        <HBox alignment="BOTTOM_CENTER">
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
            <Button alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false"
                    onAction="#handleSaveAndStart" text="Save and Start">
                <cursor>
                    <Cursor fx:constant="DEFAULT"/>
                </cursor>
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </Button>
            <Button alignment="CENTER" cancelButton="true" contentDisplay="CENTER" mnemonicParsing="false"
                    onAction="#handleCancel" text="Cancel">
                <HBox.margin>
                    <Insets left="5.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        <padding>
            <Insets left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>
</AnchorPane>
